{
  "name": "bobmonsour.com",
  "version": "1.0.0",
  "description": "This is a base set of files needed to start a project in Eleventy. Make a project directory and put these files in it.",
  "main": ".eleventy.js",
  "scripts": {
    "watch:eleventy": "eleventy --serve",
    "watch:sass": "sass sass:src/css --watch",
    "start": "npm run watch:eleventy & npm run watch:sass",
    "postcss:build": "postcss src/css/main.css -o _site/css/main.css",
    "clean": "rimraf ./_site",
    "build": "sass sass:src/css && eleventy && postcss src/css/main.css -o _site/css/main.css"
  },
  "keywords": [],
  "author": "Bob Monsour",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "open-props": "^1.3.8",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "postcss-jit-props": "^1.0.4",
    "rimraf": "^3.0.2",
    "sass": "^1.48.0"
  },
  "dependencies": {}
}
