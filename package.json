{
  "name": "bobmonsour.com",
  "version": "1.0.0",
  "description": "This is the personal website of Bob Monsour (built with 11ty).",
  "main": ".eleventy.js",
  "scripts": {
    "watch:sass": "sass --watch src/sass/main-dev.scss:_site/css/main.css",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass --no-source-map src/sass/main-prod.scss:_site/css/main.css",
    "build:eleventy": "eleventy",
    "postbuild": "postcss _site/css/main.css -o _site/css/main.css",
    "start": "cross-env ELEVENTY_ENV=dev npm-run-all --parallel watch:*",
    "build": "cross-env ELEVENTY_ENV=prod npm-run-all build:sass build:eleventy",
    "clean": "rimraf ./_site"
  },
  "keywords": [],
  "author": "Bob Monsour",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-img": "^1.1.0",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "open-props": "^1.3.16",
    "path": "^0.12.7",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-jit-props": "^1.0.6",
    "rimraf": "^3.0.2",
    "sass": "^1.50.1"
  }
}
