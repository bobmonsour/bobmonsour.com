{
  "name": "bm.com",
  "version": "1.0.0",
  "description": "It's a work in progress. It's built with [eleventy](https://www.11ty.dev/)...something I'm still getting a handle on.",
  "main": ".eleventy.js",
  "scripts": {
    "watch:sass": "sass --watch src/sass/main.scss:_site/css/main.css",
    "watch:eleventy": "eleventy --serve",
    "build:sass": "sass --no-source-map src/sass/main.scss:_site/css/main.css",
    "build:eleventy": "eleventy",
    "postbuild": "postcss _site/css/main.css -r --no-map",
    "start": "cross-env ELEVENTY_ENV=dev npm-run-all --parallel watch:*",
    "build": "cross-env ELEVENTY_ENV=prod npm-run-all build:sass build:eleventy",
    "clean": "rimraf ./_site"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.0-canary.18",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-plugin-directory-output": "^1.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "open-props": "^1.3.16",
    "path": "^0.12.7",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-jit-props": "^1.0.7",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.12",
    "postcss-logical": "^5.0.4"
  }
}
