<!DOCTYPE html>
<html lang="en">
  {% include 'partials/head.njk' %}
<body>
	<a href="#main-content" id="visually-hidden">Skip to main content</a>
  <div class="page-grid">
    {% include 'partials/header.njk' %}
    <main id="main-content">
      {# provide per-page styling via frontmatter #}
      {% if pageClass %}
        <div class="{{ pageClass }}">
          {{ content | safe }}
        </div>
      {% else %}
        {{ content | safe }}
      {% endif %}
    </main>
    {% include 'partials/footer.njk' %}
  </div>
</body>
</html>
