---
layout: default.njk
---
{# only include syntax highlighter CSS on blog posts that have code #}
{% if pageHasCode %}
  {%- css "pageHasCode" %}
    {% include "css/prism-okaidia.css" %}
  {% endcss %}
{% endif %}

<article class="post flow" data-pagefind-body>
  <div class="post-metadata">
    <h1>{{ title }}</h1>
    <p>{{ date | formatPostDate }}</p>
    <p>{{ content | readingTime }}</p>
    {% set tagsdata = tags %}
    {% include 'taglist.njk' %}
  </div>
  {% include 'showimage.njk' %}
  {{ content | safe }}
	<p><a href="mailto:bob.monsour@gmail.com?subject=Comment:%20{{ title | urlencode }}">Send a comment by email</a> (yes, that's a mailto link).</p>
	{% set theseposts = collections.posts %}
  {% include 'nextprevlinks.njk' %}
</article>
