---
layout: default.njk
---
<div class="container">
  <div class="post">
    <h1 class="post__title">{{ title }}</h1>
    <p class="post__date">{{ page.date | formatPostDate }}&nbsp;&bull;&nbsp;{{ content | readingTime }}</p>
    <ul class="post__taglist">
      <li>Tags:&nbsp;</li>
      {%- for tag in tags | filterTagList %}
      {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <li><a href=" {{ tagUrl }}" class="post__tag"> {{ tag }}</a>&nbsp;&nbsp;</li>
      {%- endfor %}
      <li><a href="/tags/">All Tags</a></li>
    </ul>
    <div class="post__body">
      {{ content | safe }}
    </div>
  </div>
</div>
