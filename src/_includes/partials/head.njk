<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }}</title>
  <meta name="description" content="{{ description }}">
  <meta name="keywords" content="{{ keywords }}">
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  {# Improve RSS feed visibility #}
  <link rel="alternate" type="application/rss+xml" title="Bob Monsour" href="https://www.bobmonsour.com/feed.xml" />

  {# 
    Load CSS
    - pagefind
    - site bundle
    - conditional syntax highlighting
  #}
  <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
  {%- css %}
    {% include "css/reset.css" %}
    {% include "css/variables.css" %}
    {% include "css/main.css" %}
  {% endcss %}
  <link rel="stylesheet" href="{% getBundleFileUrl "css" %}">
  {% if pageHasCode %}
    <link rel="preload" href="{% getBundleFileUrl "css", "pageHasCode" %}" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript>
      <link href="{% getBundleFileUrl "css", "pageHasCode" %}" rel="stylesheet">
    </noscript>
  {% endif %}

  {# Fathom Analytics #}
  {% if site.env != "development" %}
    <script src="https://cdn.usefathom.com/script.js" data-site="MJGSVNXM" defer></script>
  {% endif %}

  {# conditionally add snow fall component based on front matter #}
  {% if snow == "true" %}
    <script type="module" src="/assets/js/snow-fall.js"></script>
    <script type="module" src="/assets/js/is-land.js"></script>
  {% endif %}

  {# favicon settings #}
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">

  {# social media settings #}
  <meta property="og:title" content="{{ title }}">
  <meta property="og:type" content="website">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="{{ site.url }}/assets/img/{{ image.source }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta name="generator" content="{{ eleventy.generator }}">

  {# diagnostic for head tag loading order #}
  {# <link rel="stylesheet" href="https://csswizardry.com/ct/ct.css" class="ct" /> #}
</head>
