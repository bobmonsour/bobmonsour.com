<book-item>
	{%- set bookshop_base = "https://bookshop.org/a/109591/" -%}
	<a href="{{ bookshop_base}}{{ book.ISBN }}">
	{%- if book.localCover -%}
		<img eleventy:ignore src="/assets/img/{{ book.title | slugify }}.jpg" alt="{{ book.title | safe }}">
	{%- else -%}
		<img eleventy:ignore src="https://covers.openlibrary.org/b/isbn/{{ book.ISBN }}-M.jpg" alt="{{ book.title | safe }}">
	{%- endif -%}
	</a>
	<a href="{{ bookshop_base}}{{ book.ISBN }}" data-link-type="external">{{ book.title | safe }}</a>
	<p>by {{ book.author }}</p>
</book-item>
