{% for post in postslist %}
  <div class="post__card">
    <div class="post__metadata">
      <h2 class="post__title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <p class="post__date">
        {{ post.date | formatPostDate }}&nbsp;&bull;&nbsp;{{
          post.templateContent | readingTime
        }}
      </p>
      <ul class="post__taglist">
        <li>Tags:&nbsp;</li>
        {%- for postTag in post.data.tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ postTag | slugify }}/{% endset %}
        <li><a href=" {{ tagUrl }}" class="post__tag"> {{ postTag }}</a>&nbsp;&nbsp;</li>
        {%- endfor %}
        <li><a href="/tags/">All Tags</a></li>
      </ul>
      <p class="post__excerpt">{{ post.data.description }}</p>
    </div>
    <div class="post__image">
      <a href="{{ post.url }}">
      {% image "src/assets/img/" + post.data.imagesrc, post.data.imagealt, "(min-width: 1120px) 500px, (min-width: 600px) calc(43.4vw + 23px), (min-width: 560px) calc(-1130vw + 6828px), calc(89.17vw + 19px)" %}</a>
    </div>
  </div>
  {%- if not loop.last %}<hr>{% endif %}
{% endfor %}
