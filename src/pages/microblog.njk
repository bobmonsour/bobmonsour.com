<h1>{{ title }} <span class="parenthetical">(<a href="/microfeed.xml">microRSS</a>)</span></h1>

{%- set microlist = collections.microblog | reverse -%}
{%- for post in microlist -%}
	<div class="microblog post flow">
		<h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
		<p class="blogdate">{{ post.date | formatPostDate }}</p>
		{{ post.content | safe }}
		<hr>
	</div>
{%- endfor -%}
