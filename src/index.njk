<div class="container">
  {% set latest_posts = collections.posts | reverse %} {%- for post in
  latest_posts.slice(0,1) -%}
  <div class="post">
    <h1 class="post__title">{{ post.data.title }}</h1>
    <p class="post__date">
      {{ post.date | formatPostDate }}&nbsp;&nbsp;&bull;&nbsp;&nbsp;{{
        post.templateContent | readingTime
      }}
    </p>
    <div class="post__body">
      {{ post.templateContent | safe }}
    </div>
  </div>
  {%- endfor -%}
</div>

<div class="container">
  <h2 class="post__list-title">Recent posts from the blog</h2>

  {% set latest_posts = collections.posts | reverse %}
  {%- for post in latest_posts.slice(1,4) -%}
  <div class="post__card">
    <div class="post__image">
      <a href="{{ post.url }}">
      {% image "src/img/" + post.data.imagesrc, post.data.imagealt, "100vw" %}</a>
    </div>

    <div class="post post__portion">
      <h2 class="post__title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <p class="post__date">
        {{ post.date | formatPostDate }}&nbsp;&nbsp;&bull;&nbsp;&nbsp;{{
          post.templateContent | readingTime
        }}
      </p>
      <p class="post__excerpt">{{ post.data.description }}</p>
    </div>
  </div>
  {%- endfor -%}

  <div class="post">
    <h2 class="post__title">
      <a href="/moreposts/">A list of all my posts...</a>
    </h2>
  </div>
</div>
